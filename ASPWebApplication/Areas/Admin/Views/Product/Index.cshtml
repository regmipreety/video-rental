@model List<Product>

<div class="container">
	<div class="row pt-4 pb-3">
		<div class="col-6">
			<h2 class="text-primary"> Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-action="Upsert" class="btn btn-outline-primary">
				<i class="bi bi-plus-circle"></i> Create new Product
			</a>
		</div>
	</div>
</div>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>
				Product Name
			</th>
			<th>
				Description
			</th>
			<th>
				Director
			</th>
			<th>
				List Price
			</th>
			<th>
				List Price (1-50)
			</th>
			<th>
				List Price (50+)
			</th>
		</tr>
	</thead>

	<tbody>
		@foreach (var obj in Model.OrderBy(u => u.Title))
		{
			<tr>
				<td>@obj.Title</td>
				<td>@obj.Description</td>
				<td>@obj.Director</td>
				<td>@obj.ListPrice</td>
				<td>@obj.Price</td>
				<td>@obj.Price50</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>

